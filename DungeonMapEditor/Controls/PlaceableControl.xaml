<Grid x:Class="DungeonMapEditor.Controls.PlaceableControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DungeonMapEditor.Controls"
      xmlns:vm="clr-namespace:DungeonMapEditor.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="50" d:DesignWidth="50">
    <Grid.DataContext>
        <vm:PlaceableControlViewModel/>
    </Grid.DataContext>
    <Image Source="{Binding Placeable.Image, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Stretch="UniformToFill" RenderTransformOrigin=".5,.5">
        <Image.RenderTransform>
            <RotateTransform Angle="{Binding Placeable.Rotation, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Image.RenderTransform>
    </Image>
</Grid>
